<span class="item-abbreviation read-only" title="{{value}} ({{abbreviation}})"><b>{{abbreviation}}</b> {{value}}</span>
<input
    class="item-value edit"
    type="text"
    value="{{value}}"
    placeholder="{{t "annotate.new label placeholder"}}"
    {{#if notEdit}}disabled='disabled'{{/if}}
>
<input
    class="item-abbreviation edit"
    maxlength="3"
    type="text"
    value="{{abbreviation}}"
    {{#if notEdit}}disabled='disabled'{{/if}}
>
<span class="item-icon">{{icon}}</span>
<i class="icon-trash delete edit"></i>
<ul class="scaling">
    {{#each scaleValues}}
        <li data-id="{{data id}}" title="{{name}}">{{this.name}}</li>
    {{/each}}
</ul>
